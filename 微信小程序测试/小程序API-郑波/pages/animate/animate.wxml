<!--pages/animate/animate.wxml-->
<button type="primary" bindtap="beginAnimation">点击开始执行动画</button>
<button type="primary" bindtap="beginRotate">点击开始旋转动画</button>
<button type="primary" bindtap="beginMove">点击开始移动动画</button>
<button type="primary" bindtap="beginBack">点击开始还原动画</button>
<button type="primary" bindtap="beginHide">点击开始隐藏动画</button>

<view class="box" animation="{{boxAnimation}}"></view>

<!-- 切换城市动画 -->

<view class="cityChange">
   <view animation="{{aniLeftData}}"  class="leftView">{{fromCity}}</view>
   <image mode="widthFix" bindtap="changeCity" src="/img/change.jpg"></image>
   <view animation="{{aniRightData}}" class="rightView">{{toCity}}</view>
</view>
