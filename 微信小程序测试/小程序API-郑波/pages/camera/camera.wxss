/* pages/camera/camera.wxss */

camera {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  z-index: 20;
}

button{
  width: 650rpx;
  margin: 80rpx 50rpx;
}

.get-img-btn {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: red;
  border: 18rpx solid white;
  /*cover-view不支持渐变   background:radial-gradient(#fff,transparent); */
  position: fixed;
  bottom: 70rpx;
  left: calc(50vw - 50rpx);
  opacity: 0.7;
}

.get-img-btn:active {
  opacity: 0.3;
}

cover-image {
  width: 75rpx;
  height: 75rpx;
  position: fixed;
  bottom: 100rpx;
  left: 525rpx;
  opacity: 0.6;
}
cover-image:active{
  opacity: 0.3;
}

image {
  width: 600rpx;
  margin: 75rpx;
}
