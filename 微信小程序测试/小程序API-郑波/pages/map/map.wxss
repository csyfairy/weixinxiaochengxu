.search-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 130rpx;
  /* border: 1px solid; */
}

.input-view {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: white;
  padding: 0 30rpx;
  z-index: 100;
}

.saearch-btn {
  position: absolute;
  top: 30rpx;
  left: 630rpx;
  width: 120rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #149acf;
  color: white;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  z-index: 100;
}

.mapInput {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  width: 0rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: white;
  padding: 0 30rpx;
  z-index: 50;
