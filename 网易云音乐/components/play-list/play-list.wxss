/* components/play-list/play-list.wxss */
.play-list-root-view{
  position: fixed;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  border-top: 2rpx solid #666;
  transition: bottom 0.7s;
}

.mask{
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 400rpx;
  transition: height 0.7s;
}

.bar{
  width: 100%;
  height: 100rpx;
  text-align: left;
  background-color: black;
}

.bar image{
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
}

.cd {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  margin: 10rpx 0;
}

.spin{
  animation: spin 10s linear infinite;
}
@keyframes spin{
  0%{transform: rotate(0)}
  100%{transform: rotate(360deg)}
}
.running{
  animation-play-state: running;
}
.paused{
  animation-play-state: paused;
}


.list-box scroll-view{
  width: 100%;
  height: 750rpx;
  background-color: white;
}

.list-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50rpx;
  padding: 40rpx 20rpx;
  border-bottom: 2rpx #333 solid; 
  color: #444;
  font-size: 30rpx;
  font-weight: bold;
}

.name{
  display: flex;
  align-items: center;
}

