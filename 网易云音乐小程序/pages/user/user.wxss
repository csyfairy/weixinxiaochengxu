/* pages/user/user.wxss */
.user-root-view{
  background-color: #eee;
  height: 100vh;
}

.user-info{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-box{
  margin: 100rpx auto;
}

.avatar{
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  border: 5rpx solid black;
}


.nickname-box{
  margin: 100rpx auto;
}

.nickname{
  max-width: 600rpx;
  font-size: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

