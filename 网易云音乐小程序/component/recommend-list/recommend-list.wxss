/* components/recommend-list/recommend-list.wxss */
.recommend-list-root-view{
  margin: 20rpx 0;
}

.recommend-title{
  background-color: #eee;
  font-size: 35rpx;
  font-weight: bold;
  padding: 30rpx;
}

.list-box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
}

.list-item{
  width: 330rpx;
  background-color: #eee;
  padding: 20rpx 10rpx 10rpx 10rpx;
  text-align: center;
  margin: 10rpx 0;
}

.pic{
  width: 300rpx;
  height: 300rpx;
}

.info-box{
  text-align: left;
}

.name{
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.copywriter{
  font-size: 30rpx;
  color: gray;
}

.count{
  font-size: 24rpx;
  font-weight: bold;
}

