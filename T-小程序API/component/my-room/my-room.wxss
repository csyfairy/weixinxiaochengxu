/* component/my-room/my-room.wxss */
.room-item{
  width: 360rpx;
  height: 320rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  display: inline-block;
}
.room-item:active{
  opacity: 0.5;
}
.room-item image{
  width: 100%;
}
.name{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.room-item .headImg{
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 5rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.lineBox{
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  color: #666;
  line-height: 70rpx;
  padding-right: 5rpx;
}